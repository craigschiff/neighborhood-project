<% if @event.errors.any? %>
<div id='signup-errors'>
  <%@event.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
</div>
<% end %>
<div> Create New Event for <%= @business.name %> </div>
<div class="form-group">
  <%= form_for @event do |f| %>
  <div><%= f.label :name %> </div>
  <div><%= f.text_field :name %></div>
  <div><%= f.label :description %> </div>
  <div><%= f.text_field :description %></div>
  <div><%= f.label :price %> </div>
  <div>$ <%= f.text_field :price %></div>
  <div><%= f.label :price_description %> </div>
  <div><%= f.text_field :price_description %></div>
  <div><%= f.label :capacity %> </div>
  <div><%= f.text_field :capacity %></div>

  <div><%= f.label :datetime, "Date and Time" %> </div>
  <div class='input-group date col-xs-2' id='datetimepicker1'>
    <input type='text' class="form-control" name="event[datetime]" />
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <br />
  <div>
    <div><%= label_tag "Categories" %></div>
    <% Category.all.each do |category| %>
    <div><%= check_box_tag "categories[]", category.id, false %>
      <%= label_tag category.name %></div>
      <% end %><br />
    </div>
    <div class="">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
