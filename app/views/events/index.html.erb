<% flash[:alert] %>

<div class='text-center'>
  <h4>Search for an event or browse among the list below</h4>
  <br />
</div>
<div class='form-group text-center'>
  <%= form_tag events_path, method: :get do %>
  <div><%= label_tag "Search by Name", "Search by Name"%></div>
  <%= text_field_tag 'name', nil,  placeholder: "Enter Event Name..."  %>
  <br />
  <br />
  <%= "and/or Filter by Category:" %>
  <br />
  <% Category.all.each do |category| %>
  <%= label_tag category.name %>
  <%= check_box_tag "categories[]", category.id  %>
  <% end %>
  <br />
  <div class='col-sm-5'>
  </div>
  <div class='col-sm-2'>
    <%= submit_tag "Search", name: nil, class: "form-control"%>
    <% end %>
  </div>
</div>


<br /><br />
<% if Event.all.count > @events.count && !@events.empty?  %>
<h4><%= "Results Below:" %></h4>
<% elsif @events.empty? %>
<h4><%= "No Events Match Your Search" %></h4>
<% else %>
<h4><%= "All Events:" %></h4>
<% end %>

<% @events.each do |event| %>
<% event.check_end_date %>
<% event.check_capacity %>
<label>Name:  </label> <%= event.name %><br />
<label>Where: </label><%= event.location %><br />
<label>When:  </label> <%= event.datetime %><br />
<label>Deal:  </label><%= event.price_description %><br />
<label>Categories:</label><% event.categories.each do |category|  %>
<%= link_to category.name.capitalize, category_show_path(category) %><% end %><br />
<%= link_to "More Details", event_path(event) %><br /><br />
<% end %><br />
