<%= form_for @member do |f| %>

<div>
  <div><%= f.label :name %>:</div>
  <div><%= f.text_field :name %></div>
  <div><%= f.label :about %>:</div>
<div><%= f.text_field :about %></div>
<div><%= f.label :age %>:</div>
<div><%= f.number_field :age %></div>
<div><%= f.label :hometown %>:</div>
<div><%= f.text_field :hometown %></div>
<div><%= f.label :gender %></div>
<%= f.radio_button :gender, "male" %>
<%= label_tag(:gender_male, "Male") %><br />
<%= f.radio_button :gender, "female" %>
<%= label_tag(:gender_female, "Female") %><br />
<%= f.radio_button :gender, "other" %>
<%= label_tag(:gender_female, "Other") %><br />
<div><%= f.label :relationship_status %></div>
<%= f.radio_button :relationship_status, "green" %>
<%= label_tag(:relationship_status_green, "Green") %><br />
<%= f.radio_button :relationship_status, "yellow" %>
<%= label_tag(:relationship_status_yellow, "Yellow") %><br />
<%= f.radio_button :relationship_status, "red" %>
<%= label_tag(:relationship_status_red, "Red") %></div>
<div><%= f.label :phone %></div>
<div><%= f.phone_field :phone %></div>
<% Neighborhood.all.each do |neighborhood| %>
<%= radio_button_tag("neighborhood", "#{neighborhood.id}", "#{neighborhood.name}") %>
<%= label_tag(:neighborhood_name, "#{neighborhood.name}") %>
<% end %>

<%= f.submit %>
<% end %>
