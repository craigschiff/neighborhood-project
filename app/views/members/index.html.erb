<%= render 'layouts/members'%>

<div class='form-group text-center'>

  <%= form_tag('members', :method => 'get', :id => 'search form') do %>
  <br /> <%= text_field_tag :search, nil, style:"margin-top:5px; margin-bottom: 5px;"%>
  <br />
  <div class='col-sm-5'>

  </div>
  <div class='col-sm-2'>
    <%= submit_tag "Search", name: nil, class: "form-control"%>
    <% end %>
  </div>
</div>
<br /><br />

<% if Member.all.count > @members.count %>
<h4><%= "Search Results Below:" %></h4>
<% else %>
<h4><%= "All Members:" %></h4>
<% end %>


<div>
  <% if !@members.blank? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Relationship Status</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.name, member_path(member) %></td>
        <td><% if member.relationship_status %>
          <%= member.relationship_status.capitalize %>
          <% else %>
          N/A
          <% end %></td>
          <!-- other attributes -->
        </tr>

        <% end %>
      </tbody>
    </table>
    <% end %>

    <% if @members.blank? %>
    <h4>There are no members containing the term <%= @search %></h4>
    <% end %>

  </div>

  <br>
