<div class="modal fade bd-signup-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" style="text-align:center" id="exampleModalLabel">Sign Up</h3>
      </div>
        <div class="form-group">
          <div id='signup' style="text-align:center">
      <%= form_tag signup_path do %>
        <div>Email: <%= text_field_tag :email, nil, {class: "form-control"} %></div>
      <div>  Password: <%= password_field_tag :password, nil, {class: "form-control"} %></div>
      <div>  Password Confirmation: <%= password_field_tag :password_confirmation, nil, {class: "form-control"} %></div>
      <br />
      <div><%= submit_tag "Submit", {class: "form-control"} %></div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>
